<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:background="@drawable/menu_bg"
    tools:context="com.lizehao.watermelondiarynew.Activity.MenuActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/menu"
        android:alpha="0.9"/>

    <Button
        android:id="@+id/bt_MenuToHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"/>

    <Button
        android:id="@+id/bt_MenuToDiary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="280dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="410dp"
        android:layout_marginTop="240dp"
        android:background="@color/transparent"/>

    <Button
        android:id="@+id/bt_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="180dp"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="375dp"
        android:background="@color/transparent"/>

    <Button
        android:id="@+id/bt_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="300dp"
        android:layout_marginRight="230dp"
        android:layout_marginLeft="110dp"
        android:background="@color/transparent"/>

    <Button
        android:id="@+id/bt_collection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="470dp"
        android:layout_marginRight="230dp"
        android:layout_marginLeft="100dp"
        android:background="@color/transparent"
        />

    <Button
        android:id="@+id/bt_music"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="340dp"
        android:layout_marginBottom="300dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="260dp"
        android:background="@drawable/music" />

    <Button
        android:id="@+id/bt_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="375dp"
        android:layout_marginRight="280dp"
        android:layout_marginLeft="40dp"
        android:background="@color/transparent"/>

</android.support.constraint.ConstraintLayout>
